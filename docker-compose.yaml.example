services:
  app:
    build: .
    command: >
      sh -c "
      alembic upgrade head &&
      pytest --cov=avauth_proxy --cov-report=term-missing
      "
    volumes:
      - .:/app
      - ./nginx/proxies:/etc/nginx/conf.d/proxies
      - ./data:/app/data
    environment:
      SECRET_KEY: your-secret-key
      CONFIG_TOML_FILE: /app/config.toml.example
    ports:
      - "5001:5000"
    depends_on:
      - oauth2_proxy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  nginx:
    image: nginx:latest
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
      - ./nginx/proxies:/etc/nginx/conf.d/proxies
      - ./ssl:/etc/nginx/ssl
    ports:
      - "8000:80"
      - "443:443"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost"]
      interval: 30s
      timeout: 10s
      retries: 3

  oauth2_proxy:
    image: quay.io/oauth2-proxy/oauth2-proxy:v7.2.1
    environment:
      OAUTH2_PROXY_CLIENT_ID: "your-client-id"
      OAUTH2_PROXY_CLIENT_SECRET: "your-client-secret"
      OAUTH2_PROXY_COOKIE_SECRET: "your-cookie-secret"
      OAUTH2_PROXY_PROVIDER: "google"
    ports:
      - "4180:4180"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:4180"]
      interval: 30s
      timeout: 10s
      retries: 3
